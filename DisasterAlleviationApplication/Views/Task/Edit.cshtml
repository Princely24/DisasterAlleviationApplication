@model DisasterAlleviationApplication.Models.VolunteerTask

@{
    ViewData["Title"] = "Edit Task";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Volunteer Task
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <select asp-for="Category" class="form-select">
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.ReliefDistribution">Relief Distribution</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.SearchAndRescue">Search and Rescue</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.MedicalSupport">Medical Support</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Logistics">Logistics</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Communication">Communication</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Fundraising">Fundraising</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Administrative">Administrative</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Cleanup">Cleanup</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Transportation">Transportation</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskCategory.Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Priority" class="form-label"></label>
                            <select asp-for="Priority" class="form-select">
                                <option value="@DisasterAlleviationApplication.Models.TaskPriority.Low">Low Priority</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskPriority.Medium">Medium Priority</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskPriority.High">High Priority</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskPriority.Critical">Critical Priority</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RequiredVolunteers" class="form-label"></label>
                            <input asp-for="RequiredVolunteers" type="number" min="1" class="form-control" />
                            <span asp-validation-for="RequiredVolunteers" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="EstimatedHours" class="form-label">Estimated Hours</label>
                            <input asp-for="EstimatedHours" type="number" min="1" class="form-control" />
                            <span asp-validation-for="EstimatedHours" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="@DisasterAlleviationApplication.Models.TaskStatus.Open">Open</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskStatus.Assigned">Assigned</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskStatus.InProgress">In Progress</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskStatus.Completed">Completed</option>
                                <option value="@DisasterAlleviationApplication.Models.TaskStatus.Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CurrentVolunteers" class="form-label">Current Volunteers</label>
                            <input asp-for="CurrentVolunteers" type="number" min="0" class="form-control" readonly />
                            <small class="form-text text-muted">This field is automatically updated when volunteers apply</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RequiredSkills" class="form-label">Required Skills</label>
                        <input asp-for="RequiredSkills" class="form-control" />
                        <span asp-validation-for="RequiredSkills" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Equipment" class="form-label">Required Equipment</label>
                        <input asp-for="Equipment" class="form-control" />
                        <span asp-validation-for="Equipment" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Additional Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
