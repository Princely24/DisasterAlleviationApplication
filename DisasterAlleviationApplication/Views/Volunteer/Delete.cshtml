@model DisasterAlleviationApplication.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Delete Volunteer Profile
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Are you sure you want to delete this volunteer profile?</strong> This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Volunteer Details</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Name:</td>
                                <td>@Model.FirstName @Model.LastName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Email:</td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Phone:</td>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Status:</td>
                                <td><span class="badge bg-@(Model.Status switch {
                                    DisasterAlleviationApplication.Models.VolunteerStatus.Pending => "warning",
                                    DisasterAlleviationApplication.Models.VolunteerStatus.Approved => "success",
                                    DisasterAlleviationApplication.Models.VolunteerStatus.Active => "primary",
                                    DisasterAlleviationApplication.Models.VolunteerStatus.Inactive => "secondary",
                                    DisasterAlleviationApplication.Models.VolunteerStatus.Suspended => "danger",
                                    _ => "secondary"
                                })">@Model.Status</span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Registration Date:</td>
                                <td>@Model.RegistrationDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-success mb-3">Statistics</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Total Hours:</td>
                                <td>@Model.TotalHoursVolunteered</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Total Assignments:</td>
                                <td>@Model.Assignments.Count</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Completed Tasks:</td>
                                <td>@Model.Assignments.Count(a => a.Status == DisasterAlleviationApplication.Models.AssignmentStatus.Completed)</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Background Check:</td>
                                <td>
                                    @if (Model.HasBackgroundCheck)
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Skills))
                {
                    <div class="mt-3">
                        <h5 class="text-info mb-3">Skills</h5>
                        <div class="border rounded p-3 bg-light">
                            @Model.Skills
                        </div>
                    </div>
                }

                @if (Model.Assignments.Any())
                {
                    <div class="mt-4">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This volunteer has @Model.Assignments.Count task assignment(s). Deleting this profile will also remove all task assignments and volunteer history.
                        </div>
                    </div>
                }

                @if (Model.TotalHoursVolunteered > 0)
                {
                    <div class="mt-3">
                        <div class="alert alert-warning">
                            <i class="fas fa-clock me-2"></i>
                            <strong>Warning:</strong> This volunteer has contributed @Model.TotalHoursVolunteered hours. All volunteer history will be permanently lost.
                        </div>
                    </div>
                }

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Volunteer Profile
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
