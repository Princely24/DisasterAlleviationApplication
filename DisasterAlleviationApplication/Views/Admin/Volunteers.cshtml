@model List<DisasterAlleviationApplication.Models.Volunteer>

@{
    ViewData["Title"] = "Manage Volunteers";
    Layout = "_AdminLayout";
    var currentStatus = ViewBag.CurrentStatus as string ?? "all";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Buttons -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-action="Volunteers" asp-route-status="all" class="btn btn-@(currentStatus == "all" ? "primary" : "outline-primary")">
                    All Volunteers
                </a>
                <a asp-action="Volunteers" asp-route-status="pending" class="btn btn-@(currentStatus == "pending" ? "warning" : "outline-warning")">
                    Pending
                </a>
                <a asp-action="Volunteers" asp-route-status="approved" class="btn btn-@(currentStatus == "approved" ? "success" : "outline-success")">
                    Approved
                </a>
                <a asp-action="Volunteers" asp-route-status="active" class="btn btn-@(currentStatus == "active" ? "info" : "outline-info")">
                    Active
                </a>
                <a asp-action="Volunteers" asp-route-status="suspended" class="btn btn-@(currentStatus == "suspended" ? "danger" : "outline-danger")">
                    Suspended
                </a>
            </div>
        </div>
    </div>

    <!-- Volunteers Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>City</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var volunteer in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@volunteer.FirstName @volunteer.LastName</strong><br>
                                        @if (!string.IsNullOrEmpty(volunteer.Skills))
                                        {
                                            <small class="text-muted">Skills: @volunteer.Skills</small>
                                        }
                                    </td>
                                    <td>@volunteer.Email</td>
                                    <td>@volunteer.PhoneNumber</td>
                                    <td>@volunteer.City</td>
                                    <td>@volunteer.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-@(volunteer.Status switch {
                                            DisasterAlleviationApplication.Models.VolunteerStatus.Pending => "warning",
                                            DisasterAlleviationApplication.Models.VolunteerStatus.Approved => "success",
                                            DisasterAlleviationApplication.Models.VolunteerStatus.Active => "info",
                                            DisasterAlleviationApplication.Models.VolunteerStatus.Inactive => "secondary",
                                            DisasterAlleviationApplication.Models.VolunteerStatus.Suspended => "danger",
                                            _ => "secondary"
                                        })">
                                            @volunteer.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Volunteer" asp-action="Details" asp-route-id="@volunteer.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (volunteer.Status == DisasterAlleviationApplication.Models.VolunteerStatus.Pending)
                                        {
                                            <form asp-action="ApproveVolunteer" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@volunteer.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                            <form asp-action="RejectVolunteer" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@volunteer.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" title="Reject" onclick="return confirm('Are you sure?')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No volunteers found with the selected filter.
                </div>
            }
        </div>
    </div>
</div>
