@model DisasterAlleviationApplication.Controllers.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Volunteers</h6>
                            <h2 class="mb-0">@Model.TotalVolunteers</h2>
                            <small>@Model.ApprovedVolunteers Approved</small>
                        </div>
                        <div>
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Volunteers" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Incidents</h6>
                            <h2 class="mb-0">@Model.TotalIncidents</h2>
                            <small>@Model.ActiveIncidents Active</small>
                        </div>
                        <div>
                            <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Incidents" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Donations</h6>
                            <h2 class="mb-0">@Model.TotalDonations</h2>
                            <small>@Model.PendingDonations Pending</small>
                        </div>
                        <div>
                            <i class="fas fa-hand-holding-heart fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-action="Donations" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-uppercase mb-0">Tasks</h6>
                            <h2 class="mb-0">@Model.TotalTasks</h2>
                            <small>@Model.OpenTasks Open</small>
                        </div>
                        <div>
                            <i class="fas fa-tasks fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-controller="Task" asp-action="Index" class="text-white text-decoration-none">
                        View All <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Volunteers -->
    @if (Model.PendingVolunteers.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="fas fa-clock me-2"></i>Pending Volunteer Approvals
                            <span class="badge bg-dark">@Model.PendingVolunteersCount</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Registration Date</th>
                                        <th>Skills</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var volunteer in Model.PendingVolunteers)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@volunteer.FirstName @volunteer.LastName</strong>
                                            </td>
                                            <td>@volunteer.Email</td>
                                            <td>@volunteer.PhoneNumber</td>
                                            <td>@volunteer.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(volunteer.Skills))
                                                {
                                                    <small class="text-muted">@volunteer.Skills</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Volunteer" asp-action="Details" asp-route-id="@volunteer.Id" class="btn btn-sm btn-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <form asp-action="ApproveVolunteer" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@volunteer.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                        <i class="fas fa-check"></i> Approve
                                                    </button>
                                                </form>
                                                <form asp-action="RejectVolunteer" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@volunteer.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Reject" onclick="return confirm('Are you sure you want to reject this volunteer?')">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No pending volunteer approvals at this time.
        </div>
    }
</div>
