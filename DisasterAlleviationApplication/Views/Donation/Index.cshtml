@model IEnumerable<DisasterAlleviationApplication.Models.Donation>

@{
    ViewData["Title"] = "Donations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-gift me-2"></i>Resource Donations</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus me-1"></i>Make Donation
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">All Donations</h5>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Item</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Donated By</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.ItemName</strong>
                                            @if (item.IsUrgent)
                                            {
                                                <span class="badge bg-danger ms-1">Urgent</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <br><small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.Category?.Name</span>
                                        </td>
                                        <td>
                                            @item.Quantity @item.Unit
                                            @if (item.EstimatedValue.HasValue)
                                            {
                                                <br><small class="text-success">R@item.EstimatedValue.Value.ToString("F2")</small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-@(item.Type switch {
                                                DisasterAlleviationApplication.Models.DonationType.Physical => "primary",
                                                DisasterAlleviationApplication.Models.DonationType.Financial => "success",
                                                DisasterAlleviationApplication.Models.DonationType.Service => "info",
                                                _ => "secondary"
                                            })">@item.Type</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-@(item.Status switch {
                                                DisasterAlleviationApplication.Models.DonationStatus.Pending => "warning",
                                                DisasterAlleviationApplication.Models.DonationStatus.Approved => "info",
                                                DisasterAlleviationApplication.Models.DonationStatus.Collected => "primary",
                                                DisasterAlleviationApplication.Models.DonationStatus.InTransit => "secondary",
                                                DisasterAlleviationApplication.Models.DonationStatus.Distributed => "success",
                                                DisasterAlleviationApplication.Models.DonationStatus.Rejected => "danger",
                                                _ => "secondary"
                                            })">@item.Status</span>
                                        </td>
                                        <td>
                                            @item.User?.FirstName @item.User?.LastName
                                        </td>
                                        <td>
                                            @item.DonationDate.ToString("MMM dd, yyyy")
                                            @if (item.PickupDate.HasValue)
                                            {
                                                <br><small class="text-muted">Pickup: @item.PickupDate.Value.ToString("MMM dd")</small>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.UserId == ViewBag.CurrentUserId && item.Status == DisasterAlleviationApplication.Models.DonationStatus.Pending)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-gift fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No Donations Yet</h4>
                        <p class="text-muted">Be the first to make a donation to help those in need.</p>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i>Make Your First Donation
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card border-success">
            <div class="card-body text-center">
                <i class="fas fa-chart-pie fa-3x text-success mb-3"></i>
                <h5>Total Donations</h5>
                <h3 class="text-success">@Model.Count()</h3>
                <p class="text-muted mb-0">Items donated</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card border-primary">
            <div class="card-body text-center">
                <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
                <h5>Total Value</h5>
                <h3 class="text-primary">R@(Model.Where(d => d.EstimatedValue.HasValue).Sum(d => d.EstimatedValue.Value).ToString("F2"))</h3>
                <p class="text-muted mb-0">Estimated value</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card border-warning">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h5>Urgent Donations</h5>
                <h3 class="text-warning">@Model.Count(d => d.IsUrgent)</h3>
                <p class="text-muted mb-0">Need immediate attention</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add current user ID to view bag for comparison
        @{
            ViewBag.CurrentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        }
    </script>
}
