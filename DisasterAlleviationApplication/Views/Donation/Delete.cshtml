@model DisasterAlleviationApplication.Models.Donation

@{
    ViewData["Title"] = "Delete Donation";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-trash me-2"></i>Delete Donation
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Are you sure you want to delete this donation?</strong> This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary mb-3">Donation Details</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Item Name:</td>
                                <td>@Model.ItemName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Category:</td>
                                <td><span class="badge bg-secondary">@Model.Category?.Name</span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Type:</td>
                                <td><span class="badge bg-@(Model.Type switch {
                                    DisasterAlleviationApplication.Models.DonationType.Physical => "primary",
                                    DisasterAlleviationApplication.Models.DonationType.Financial => "success",
                                    DisasterAlleviationApplication.Models.DonationType.Service => "info",
                                    _ => "secondary"
                                })">@Model.Type</span></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Quantity:</td>
                                <td>@Model.Quantity @Model.Unit</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Status:</td>
                                <td><span class="badge bg-@(Model.Status switch {
                                    DisasterAlleviationApplication.Models.DonationStatus.Pending => "warning",
                                    DisasterAlleviationApplication.Models.DonationStatus.Approved => "info",
                                    DisasterAlleviationApplication.Models.DonationStatus.Collected => "primary",
                                    DisasterAlleviationApplication.Models.DonationStatus.InTransit => "secondary",
                                    DisasterAlleviationApplication.Models.DonationStatus.Distributed => "success",
                                    DisasterAlleviationApplication.Models.DonationStatus.Rejected => "danger",
                                    _ => "secondary"
                                })">@Model.Status</span></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-success mb-3">Donor & Timeline</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold">Donated By:</td>
                                <td>@Model.User?.FirstName @Model.User?.LastName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Donation Date:</td>
                                <td>@Model.DonationDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                            @if (Model.EstimatedValue.HasValue)
                            {
                                <tr>
                                    <td class="fw-bold">Estimated Value:</td>
                                    <td>R@Model.EstimatedValue.Value.ToString("F2")</td>
                                </tr>
                            }
                            @if (Model.PickupDate.HasValue)
                            {
                                <tr>
                                    <td class="fw-bold">Pickup Date:</td>
                                    <td>@Model.PickupDate.Value.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                            @if (Model.IsUrgent)
                            {
                                <tr>
                                    <td class="fw-bold">Priority:</td>
                                    <td><span class="badge bg-danger">Urgent</span></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mt-3">
                        <h5 class="text-info mb-3">Description</h5>
                        <div class="border rounded p-3 bg-light">
                            @Model.Description
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.PickupLocation))
                {
                    <div class="mt-3">
                        <h5 class="text-warning mb-3">Pickup Information</h5>
                        <div class="border rounded p-3 bg-light">
                            <strong>Location:</strong> @Model.PickupLocation
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mt-3">
                        <h5 class="text-secondary mb-3">Additional Notes</h5>
                        <div class="border rounded p-3 bg-light">
                            @Model.Notes
                        </div>
                    </div>
                }

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Delete Donation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
